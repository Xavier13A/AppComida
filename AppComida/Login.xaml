<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppComida.Login"
             >
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Bienbenido!"
             HorizontalOptions="CenterAndExpand" FontSize="Large" TextColor="Black" />
            
            <Image Source="https://static8.depositphotos.com/1020482/913/i/450/depositphotos_9134357-stock-photo-delivery-scooter-with-big-white.jpg"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese su Usuario " />
            <Entry x:Name="txtContraseña" Placeholder="Ingrese su Contradeña " IsPassword="True" />

            <Button x:Name="btnRegistrate" Text= "Ingresa" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnIngresa" Text= "Registrate" Clicked="btnIngresa_Clicked"/> 
            


        </StackLayout>
    </ContentPage.Content>
</ContentPage>